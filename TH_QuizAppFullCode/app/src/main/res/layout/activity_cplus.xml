<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CPlus">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="565dp"
        android:layout_height="452dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/c_plus_screen" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewQuestion"
        android:layout_width="267dp"
        android:layout_height="114dp"
        android:layout_marginTop="280dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:outlineSpotShadowColor="@color/purple"
        android:outlineAmbientShadowColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvQues"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Question"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewA"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:outlineSpotShadowColor="@color/purple"
        android:outlineAmbientShadowColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewQuestion">

        <TextView
            android:id="@+id/tvA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="A"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewB"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:outlineSpotShadowColor="@color/purple"
        android:outlineAmbientShadowColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewA">

        <TextView
            android:id="@+id/tvB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="B"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewC"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:outlineSpotShadowColor="@color/purple"
        android:outlineAmbientShadowColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewB">

        <TextView
            android:id="@+id/tvC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="C"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewD"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:outlineSpotShadowColor="@color/purple"
        android:outlineAmbientShadowColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewC">

        <TextView
            android:id="@+id/tvD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="D"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="134dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_purple"
        android:text="Next"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewD"
        app:layout_constraintVertical_bias="0.533" />


</androidx.constraintlayout.widget.ConstraintLayout>