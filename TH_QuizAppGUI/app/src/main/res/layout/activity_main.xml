<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineAmbientShadowColor="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="373dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_screen" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="329dp"
        android:layout_height="423dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.863">

        <LinearLayout
            android:id="@+id/layoutC"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/background_linear"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_c"
                android:layout_width="53dp"
                android:layout_height="73dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/c_plus" />

            <TextView
                android:id="@+id/tv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C ++"
                android:textAlignment="center"
                android:textColor="#A76AE4"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutJava"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_linear"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutC">

            <ImageView
                android:id="@+id/java"
                android:layout_width="53dp"
                android:layout_height="73dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/java" />

            <TextView
                android:id="@+id/tv_java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Java"
                android:textAlignment="center"
                android:textColor="#A76AE4"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPython"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_linear"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutJava">

            <ImageView
                android:id="@+id/img_python"
                android:layout_width="53dp"
                android:layout_height="73dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/python" />

            <TextView
                android:id="@+id/tv_python"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Python"
                android:textAlignment="center"
                android:textColor="#A76AE4"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>